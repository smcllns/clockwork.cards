{
  "name": "clockwork-cards",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "lsof -ti :3000 | xargs kill -9 2>/dev/null; bun ./index.html --hostname=0.0.0.0",
    "check": "tsc",
    "build": "tsc && bun run build.ts",
    "test": "bun test",
    "deploy": "tsc && bun run build.ts && wrangler pages deploy dist"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.19.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.182.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "printWidth": 140
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/three": "^0.182.0",
    "bun-plugin-tailwind": "latest",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.65.0"
  }
}
